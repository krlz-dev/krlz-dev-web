<section id="contact" class="py-5 bg-darker" data-aos="fade-up">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="display-4 fw-bold mb-4">Get In Touch</h2>
                <div class="divider mb-4"></div>
                <p class="lead mb-5">
                    Interested in collaborating or have a project in mind? Feel free to reach out!
                </p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="contact-card p-4 rounded-3" data-aos="zoom-in">
                    <div class="text-center">
                        <div class="social-links fs-1 mb-4">
                            <a href="https://github.com/krlz-dev" 
                               class="mx-3 text-light social-icon"
                               target="_blank">
                                <i class="bi bi-github"></i>
                            </a>
                            <a href="mailto:your.email@example.com" 
                               class="mx-3 text-light social-icon">
                                <i class="bi bi-envelope"></i>
                            </a>
                        </div>
                        <a href="https://github.com/krlz-dev" 
                           class="btn btn-outline-light btn-lg px-5"
                           target="_blank">
                            View My Work
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .bg-darker {
        background-color: #0c0e12;
    }
    
    .contact-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .divider {
        width: 60px;
        height: 4px;
        background: var(--accent);
        margin: 0 auto;
    }
    
    .social-icon {
        transition: color 0.3s ease;
    }
    
    .social-icon:hover {
        color: var(--accent) !important;
    }
    
    .btn-outline-light:hover {
        background-color: var(--accent);
        border-color: var(--accent);
        color: #13151a;
    }
</style>
