---
const skills = {
    'Backend Development': [
        'Java', 'Spring Boot', 'Scala', 'Akka', 'Akka Http'
    ],
    'Frontend Development': [
        'JavaScript', 'React', 'Svelte', 'Vue', 'Node', 'Express', 
        'TypeScript', 'NextJs', 'HTML', 'CSS'
    ],
    'DevOps & Tools': [
        'Docker', 'Kubernetes', 'Jenkins', 'Git', 'Linux',
        'Kafka', 'PostgreSQL', 'MySQL', 'Redis'
    ],
    'Other Skills': [
        'Microservices', 'RESTful APIs', 'OAuth2', 'OpenID',
        'Unit Testing', 'Integration Testing', 'Agile Methodologies'
    ]
};
---

<section id="skills" class="py-5 bg-darker" data-aos="fade-up">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="display-4 fw-bold mb-4">Skills & Technologies</h2>
                <div class="divider mb-4"></div>
            </div>
        </div>
        <div class="row g-4">
            {
                Object.entries(skills).map(([category, items]) => (
                    <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="200">
                        <div class="skill-category h-100 p-4 rounded-3">
                            <h3 class="h5 mb-3 text-accent">{category}</h3>
                            <ul class="list-unstyled mb-0">
                                {items.map(skill => (
                                    <li class="mb-2">
                                        <i class="bi bi-check2-circle me-2 text-accent"></i>
                                        {skill}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .bg-darker {
        background-color: #0c0e12;
    }
    
    .skill-category {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: transform 0.3s ease;
    }
    
    .skill-category:hover {
        transform: translateY(-5px);
    }
    
    .text-accent {
        color: var(--accent);
    }
    
    .divider {
        width: 60px;
        height: 4px;
        background: var(--accent);
        margin: 0 auto;
    }
</style>
